@model Hotel

<style>
    .card-img-overlay {
        bottom: auto !important;
    }
</style>

<div class="col-sm-4">
    <div class="card">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.HotelName">
        <div class="card-body">
            <div class="card-img-overlay">
                <h5 class="card-title">
                    <a
                        asp-controller="Hotel"
                        asp-action="Details"
                        asp-route-id="@Model.HotelId">@Model.HotelName
                        </a>
                    </h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Price.ToString("0.00 NOK") per natt</h6>

        
            </div>

            <p class="card-text">@Model.HotelDescription</p>

            <div class="button-container">
                <a class="btn btn-primary"
                   asp-controller="Hotel"
                   asp-action="Details"
                   asp-route-id="@Model.HotelId">
                    Reserver
                </a>

                <a class="btn btn-primary"
                   asp-controller="Hotel"
                   asp-action="Update"
                   asp-route-id="@Model.HotelId">
                    Update
                </a>
                <a class="btn btn-primary"
                   asp-controller="Hotel"
                   asp-action="Delete"
                   asp-route-id="@Model.HotelId">
                    Delete
                </a>
            </div>
       
         
        </div>
        <div class="card-footer">
            <ul class="list-inline mb-0">
                <li class="list-inline-item">
                    <i class="bi bi-check2-square"></i> A/C
                </li>
                <li class="list-inline-item">
                    <i class="bi bi-check2-square"></i> Garasje
                </li>
                <li class="list-inline-item">
                    <i class="bi bi-check2-square"></i> Pool
                </li>
                <li class="list-inline-item">
                    <i class="bi bi-check2-square"></i> Wifi
                </li>
            </ul>
        </div>
    </div>

</div>