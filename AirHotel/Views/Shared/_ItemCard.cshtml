@model Hotel

<div class="col">
    <div>
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.HotelName">
        <div>
            <div class="d-flex justify-content-between mt-2">
                <h5 class="text-start">
                    <a asp-controller="Hotel"
                       asp-action="Details"
                       asp-route-id="@Model.HotelId">@Model.HotelName</a>
                </h5>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("0.00 NOK")
                </h5>
            </div>
        </div>
    </div>
</div>