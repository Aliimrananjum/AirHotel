@model Hotel

<h3 class="my-5">
    @Model.HotelName
</h3>

<div class="row gx-5">
    <img alt="@Model.HotelName" src="@Model.ImageUrl" class="img-fluid col-5" />
    <div class="col-7">
        <h5>@Model.HotelDescription</h5>
        <h3 class="pull-right">@Model.Price.ToString("0.00 NOK")</h3>
        <p><a href="/Hotel/Table">Back to Table View</a></p>
        <p><a href="/Hotel/Grid">Back to Grid View</a></p>
        <p><a href="/Hotel/Card">Back to Card View</a></p>
    </div>
</div>