            <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="~/images/AirHotel_1.jpg" class="d-block w-100" alt="Oslo S">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Welcome to AirHotel</h1>
                    <p class="lead">Have fun while traveling</p>
                    <button class="btn btn-primary">Book a room</button>
                </div>
            </div>
            <div class="carousel-item active">
                <img src="~/images/AirHotel_2.jpg" class="d-block w-100" alt="Nasjonal">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Welcome to AirHotel</h1>
                    <p class="lead">Always here to accomidate our guests</p>
                    <button class="btn btn-primary">Contact us</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/AirHotel_3.jpg" class="d-block w-100" alt="OsloMet">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Welcome to AirHotel</h1>
                    <p class="lead">Rent out your room in a few clicks</p>
                    <button class="btn btn-primary">Register room</button>
                </div>
            </div>
        </div>
    </div>

</section>

<!--Search Section-->
<section class="bg-body-secondary">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card text-bg-light my-5 mb-5">
                    <div class="card-body">

                        <div class="card-header">
                            <div class="text-center p-3">
                                <h1 class="display-4">Find Your Dream Room</h1>
                            </div>

                        </div>


                        <form>
                            <!-- Hvor vil du reise -->
                            <div class="mb-3">

                                <input type="text" class="form-control" id="destination" placeholder="Enter address e.g. street, city and state or zip">
                            </div>

                            <!-- Dato til og fra -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="dateFrom" class="form-label">Date From</label>
                                    <input type="date" class="form-control" id="dateFrom">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="dateTo" class="form-label">Date to</label>
                                    <input type="date" class="form-control" id="dateTo">
                                </div>
                            </div>

                            <!-- Antall soverom -->
                            <div class="mb-3">
                                <label for="bedrooms" class="form-label">Bedrooms</label>
                                <select class="form-select" id="bedrooms">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <!-- Add more options as needed -->
                                </select>
                            </div>



                            <!-- Checkboxer -->
                            <div class="card-footer bg-secondar mb-2">
                                <div class="d-flex justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="ac" id="airConditioning">
                                        <label class="form-check-label" for="airConditioning">Air Conditioning</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="pool" id="swimmingPool">
                                        <label class="form-check-label" for="swimmingPool">Swimming Pool</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="heating" id="centralHeating">
                                        <label class="form-check-label" for="centralHeating">Central Heating</label>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">search</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


